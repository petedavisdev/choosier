{
	"private": true,
	"scripts": {
		"clean": "nuxt cleanup",
		"build": "nuxt build",
		"start": "nuxt start",
		"dev": "nuxt dev",
		"generate": "nuxt generate",
		"prepare": "nuxt prepare",
		"preview": "nuxt preview",
		"checks": "npm run supabase:types && npm run typecheck && npm run lint -- --fix && prettier --write . && npm run e2e",
		"format": "prettier --check .",
		"lint": "eslint .",
		"typecheck": "nuxt typecheck",
		"e2e": "cypress run",
		"cy": "cypress open",
		"supabase:login": "npx supabase login",
		"supabase:types": "source .env && npx supabase gen types typescript --project-id ${SUPABASE_PROJECT_ID} --schema public > shared/types/database.ts",
		"upgrade": "npx nuxi@latest upgrade --force",
		"ngrok": "source .env && ngrok http http://localhost:3000 --url=https://${DOMAIN}"
	},
	"dependencies": {
		"@nuxt/image": "^1",
		"@nuxtjs/supabase": "^1",
		"@polar-sh/checkout": "^0.1",
