		"@polar-sh/sdk": "^0.34",
		"base64-arraybuffer": "^1",
		"html-to-image": "^1",
		"nuxt": "^4.0.0-rc.0"
	},
	"devDependencies": {
		"@nuxt/eslint": "^1",
		"cypress": "^14",
		"eslint": "^9",
		"eslint-config-prettier": "^10",
		"prettier": "^3"
	}
